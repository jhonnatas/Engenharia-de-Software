  <% end %>


<div class="container">
  <div class="row">
    <form class="form-horizontal">
      <fieldset>
        <legend></legend>

          <div class="form-group">
            <label class="col-md-2 control-label" for="marcotipo">Razão Social</label>
            <div class="col-md-10">
              <%= f.text_field :rsocial, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-2 control-label" for="marcotipo">CNPJ</label>
            <div class="col-md-10">
              <%= f.text_field :cnpj, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-2 control-label" for="marcotipo">Telefone</label>
            <div class="col-md-10">
              <%= f.text_field :phone, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-2 control-label" for="marcotipo">Endereço</label>
            <div class="col-md-10">
              <%= f.text_field :address, class: 'form-control' %>
            </div>
          </div>

           <div class="form-group">
            <label class="col-md-2 control-label" for="marcotipo">Bairro</label>
            <div class="col-md-10">
              <%= f.text_field :neighborhood, class: 'form-control' %>
            </div>
          </div>

