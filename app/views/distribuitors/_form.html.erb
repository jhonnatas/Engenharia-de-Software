            <label class="col-md-2 control-label" for="marcotipo">Cidade</label>
            <div class="col-md-10">
              <%= f.text_field :city, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-2 control-label" for="marcotipo">Estado</label>
            <div class="col-md-10">
              <%= f.text_field :state, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-2 control-label" for="marcotipo">CEP</label>
            <div class="col-md-10">
              <%= f.text_field :zipcode, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-2 control-label" for="marcotipo">Complemento</label>
            <div class="col-md-10">
              <%= f.text_field :complement, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-2 control-label" for="marcotipo">Contato</label>
            <div class="col-md-10">
              <%= f.text_field :contact, class: 'form-control' %>
            </div>
          </div>   

          <div class="actions">
          <%= f.submit %>
          </div>

          </fieldset>
        </form>
    </div><!-- end of row -->
</div><!- end of container -->
  
<% end %>
