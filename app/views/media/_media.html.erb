 <!-- Table -->
  <table class="table table-striped table-responsive" cellspacing="0" width="100%">
  <tr>
    <th>Nome</th>
    <th>Valor(R$)</th>
    <th></th>
    <th></th>
    <th></th>
   </tr>

  <% @media.each do |medium| %>
    <tr>
      <td><%= medium.name %></td>
      <td><%= medium.value %></td>
      <td><%= link_to medium, class: "btn btn-success btn-mini" do %><!--<i class="fa fa-search" aria-hidden="true"></i>--> Detalhes<% end %>
      <td><%= link_to edit_medium_path(medium), class: "btn btn-warning btn-mini" do %><!--<i class="fa fa-pencil-square-o" aria-hidden="true"></i> -->Editar <% end %>
      <td><%= link_to medium, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger btn-mini"  do %><!--<i class="fa fa-eraser" aria-hidden="true"></i></i>--> Deletar <% end %>      
    </tr>
  <% end %>
</table> <!--end of table -->

